@model IEnumerable<BigSchool_1.Models.Course>

@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="/Content/Site.css" rel="stylesheet">

<div class="row" style="padding-top:50px;">
    <div class="col-md-4">
        <ul class="course">
            @foreach (var course in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @course.DateTime.ToString("MM")
                        </div>
                        <div class="day">
                            @course.DateTime.ToString("dd")
                        </div>
                    </div>
                    <div class="details">
                        <span class="lecturer">
                            @course.ApplicationUser.Name
                        </span>
                        <br />
                        <span class="category">
                            @course.Category.Name
                        </span>
                    </div>
                    <div class="action" style="padding-left:70px">
                        <a href="@Url.Action("Edit","Courses",new { id = course.Id})">Edit</a> |
                        <a href="">Delete</a>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>